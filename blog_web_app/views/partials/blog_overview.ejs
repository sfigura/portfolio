
<section id="work">
    <div class="container py-5 my-5">
        <div class="row">
            <div class="col-xl-6">
                <h3>Happy Reading!</h3>
                <p>This is what I wrote so far.</p>
            </div>
        </div>

        <% if (locals.blogPosts) { %>
            <ul class="list-unstyled">
                <% locals.blogPosts.forEach(function(item, index) { %>
                    <li>
                        <div class="row row-cols-12 align-items-stretch g-4 py-5">
                            <div class="col">
                                <a href="/view?id=<%= index %>"  class="text-decoration-none text-dark">
                                    <div class="card card-cover h-100 overflow-hidden text-bg-dark shadow">
                                        <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">
                                        <h3 class="mb-4 display-6 lh-1 fw-bold"><%= item.title %></h3>
                                        <ul class="d-flex justify-content-between list-unstyled mt-auto">
                                            <li class="d-flex align-items-center me-3">
                                            <small><%= item.teaser %></small>
                                            </li>
                                            <li class="d-flex align-items-center">
                                            <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"></use></svg>
                                            <small><%= item.date %></small>
                                            </li>
                                        </ul>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>Nothing written yet.</p>
        <% } %>
    </div>
</section>